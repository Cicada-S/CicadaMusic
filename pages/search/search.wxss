.searchContainer {
  padding: 0 20rpx;
}

.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}

.header .searchInput {
  position: relative;
  flex: 1;
  background: rgba(237, 237, 237, .3);
  border-radius: 30rpx;
}

.header .cancel {
  width: 100rpx;
  text-align: center;
}

.searchInput .searchIcon {
  position: absolute;
  left: 15rpx;
}

.searchInput .clear {
  position: absolute;
  top: 0;
  right: 30rpx;
  z-index: 9;
  color: #3a3d3e;
  font-size: 26rpx;
}

.searchInput input {
  height: 60rpx;
  margin-left: 50rpx;
}

.placeholder {
  /* color: #d43c33; */
  font-size: 28rpx;
}


/* 热搜榜 */
.hotContainer .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}

.hotContainer .hotList {
  display: flex;
  flex-wrap: wrap;
}

.hotList .hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}

.hotItem .order {
  margin: 0 10rpx;
} 

.hotItem .pic {
  height: 26rpx;
  margin-left: 10rpx;
}

/* 搜索内容 */
.showSearchContent .searchContent {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}

.searchList .searchItem {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}

.searchItem .content {
  flex: 1;
  font-size: 26rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
}

/* 搜索记录 */
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
  margin-top: 20rpx 0;
}

.history .title {
  height: 50rpx;
  font-size: 28rpx;
}

.history .historyItem {
  height: 50rpx;
  font-size: 26rpx;
  margin: 0 0 20rpx 20rpx;
  padding: 0 30rpx;
  background: #ededed;
  border-radius: 20rpx;
}

.history .delete {
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  font-size: 36rpx;
}