.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.recommendSongContainer .header .pic {
  width: 100%;
  height: 100%;
}

.recommendSongContainer .header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -130rpx;
  margin-top: -40rpx;
  width: 300rpx;
  height: 100rpx;
  color: #fff;
  font-size: 38rpx;
  text-align: center;
  line-height: 100rpx;
}


/* 列表区域样式 */
.ListContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 30rpx;
}

.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}

.listHeader .changeMore {
  float: right;
}


/* 内容区的样式 */
.listScroll {
  height: calc(100vh - 380rpx);
}

.scrollItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.scrollItem .pic{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.musicInfo .txt {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}